<head>
  <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700%7CRoboto%7CJosefin+Sans:100,300,400,500" rel="stylesheet" type="text/css">
</head>
 <%= render 'shared_pages/page_title', title: "Get in touch with us" %>

 <!-- Main content -->
<section class="container tm-contact-main">
  <div class="row">
    <div id="containers">
      <!-- start map-->
      <div class="map ">
        <div class="strip info">
          <h3 id="ask" style="text-align: center; margin-bottom: 5%;">Find where we are based</h3>
            <div style="width: 100%">
              <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" 
                src="https://maps.google.com/maps?width=100%25&amp;height=400&amp;hl=en&amp;q=blandchardstown+(Food%20Universum)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed" 
                style="width: inherit;">
              </iframe>
          </div>
        </div>
      </div> <!-- end map-->

     <!-- Start contact form -->
      <div class="row">
        <div class="contact-form-container ">
          <%= form_for @contact do |f| %>
              <div class="row">
              <div class="contact-form-container">
                <h2 class="contact-title">Contact Us</h2>
                <p>Send us a message, we will come back to you as soon as possible. The tips and information that you provide us will be used in order to improve our page.</p>
                <form action="#" method="post" class="tm-contact-form">
                    <div class="col-lg-5 col-md-5 contact-form-left" style="margin-top: 1%;">
                      <div class="form-group" style= "margin-bottom: 15%;">
                          <div class="control-label ">
                            <%= f.label :name  %>
                          </div>
                          <div class="col-md-8">
                            <%= f.text_field :name, class: "form-control", placeholder: "Name", required: true %>
                          </div>
                       </div>
                      <div class="form-group" >
                          <div class="control-label ">
                            <%= f.label :email  %>
                          </div>
                          <div class="col-md-8">
                            <%= f.text_field :email, class: "form-control", placeholder: "Email", required: true %>
                          </div>
                        </div>
                    </div>
                    <div class="form-group">
                      <div class="control-label col-md-2">
                        <%= f.label :message  %>
                      </div>
                      <div class="col-lg-7 col-md-7 contact-form-right">
                          <div class="form-group margin-bottom-0">
                            <%= f.text_area :message, class: "form-control", placeholder: "Message", rows:6 , as: :text %>
                          </div>
                      </div>
                    </div>
                    <div class="col-lg-12 col-md-12 submit-btn-container" style="margin-top: 1%;">
                      <button class="btn btn-default">Submit</button>
                    </div>
                </form>
              </div>
            </div>
          <% end %>
        </div>
      </div>  
       <!-- End contact form -->
     </div> 
   </div> 
 <!--banner-->
<%= render 'shared_pages/banner_sign_up', title: "sign up banner" %>
</section>

  <!-- End Main content -->
